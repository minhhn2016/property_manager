{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Create a Property",
  "type": "object",
  "properties": {
    "propertyName": {
      "type": "string"
    },
    "description": {
      "type": ["string", "null"]
    },
    "street": {
      "type": ["string", "null"]
    },
    "number": {
      "type": ["string", "null"]
    },
    "postalCode": {
      "type": ["string", "null"]
    },
    "city": {
      "type": ["string", "null"]
    },
    "municipality": {
      "type": ["string", "null"]
    },
    "country": {
      "type": ["string", "null"]
    },
    "position": {
      "type": "object",
      "properties": {
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        }
      }
    }
  },
  "required": ["propertyName", "position"]
}